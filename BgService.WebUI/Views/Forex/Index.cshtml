@model List<Forex> 

@{
    ViewData["Title"] = "Döviz Kurları";
}

<div class="text-center">
    <h1 class="display-4">Döviz Kurları</h1>
    <p>Veritabanından çekilen döviz kuru verileri.</p>
</div>

<div class="row">
    <div class="col-md-10 offset-md-1">
        @if (Model != null && Model.Any())
        {
            <table class="table table-striped table-bordered mt-4">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Baz Para Birimi</th>
                        <th>Hedef Para Birimi</th>
                        <th>Kur</th>
                        <th>Zaman Damgası (UTC)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rate in Model)
                    {
                        <tr>
                            <td>@rate.Id</td>
                            <td>@rate.BaseCurrency</td>
                            <td>@rate.TargetCurrency</td>
                            <td>@rate.Rate.ToString("F4")</td>
                            <td>@rate.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info mt-4" role="alert">
                Henüz gösterilecek döviz kuru verisi bulunmamaktadır. Lütfen arka plan servisinizin çalıştığından emin olun.
            </div>
        }
    </div>
</div>